{
  "name": "budget4home",
  "version": "1.0.0",
  "description": "API Project using node to control budget for home",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/src/index.js",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix"
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "expressjs",
    "api"
  ]
}
